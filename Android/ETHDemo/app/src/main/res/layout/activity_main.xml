<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Addressï¼š"/>
    <EditText
            android:id="@+id/et_address_to"
            android:layout_width="match_parent"
            android:hint="please enter the address you want to trade"
            android:layout_height="wrap_content"
    />
    <Button
            android:id="@+id/btn_get_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Balance"/>
    <Button
            android:id="@+id/btn_get_tx_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Transaction List"/>
    <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:hint="please enter the amount you want to trade"
            android:layout_height="wrap_content"
    />
    <Button
            android:id="@+id/btn_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Push TX"/>
    <Button
            android:id="@+id/btn_get_tx_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get TX Status"/>

    <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

</LinearLayout>